@model BookCreateModel 

<h1>Add New Book</h1>
<form method="post" asp-controller="Book" asp-action="Add">
    <div asp-validation-summary="ModelOnly">
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title"></span>
    </div>
     <div class="form-group">
        <label asp-for="AuthorID"></label>
        <select class="form-control" asp-for="AuthorID" asp-items="@ViewBag.Authors">
        </select>
        <span asp-validation-for="AuthorID"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea  cols="4" asp-for="Description" class="form-control">
        </textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <input type="submit" value="Add" class="btn btn-primary"/>
    </div>
</form>